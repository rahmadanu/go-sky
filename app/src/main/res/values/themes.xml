<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimaryVariant">@color/teal_blue</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.GoSky" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cerulean_blue</item>
        <item name="colorPrimaryVariant">@color/teal_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_blue</item>
        <item name="colorSecondaryVariant">@color/teal_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/helvetica</item>
    </style>
</resources>